{
    "name": "twig-preview",
    "displayName": "Twig Preview",
    "publisher": "DavidLhoumaud",
    "description": "A Visual Studio Code extension to preview Twig templates.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.50.0"
    },
    "license": "MIT",
    "url": "https://github.com/dlhoumaud/twig-preview",
    "repository": "https://github.com/dlhoumaud/twig-preview",
    "categories": [
        "Other",
        "Visualization",
        "Programming Languages",
        "Language Packs"
    ],
    "activationEvents": [
        "onCommand:twigPreview.openPreview",
        "onLanguage:twig"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "tsc -p .",
        "watch": "tsc -w"
    },
    "devDependencies": {
        "@types/node": "^14.0.0",
        "typescript": "^4.0.0",
        "@types/vscode": "^1.50.0",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "twig": "^1.15.4"
    },
    "contributes": {
        "commands": [
            {
                "command": "twigPreview.openPreview",
                "title": "Open Twig Preview"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "twigPreview.openPreview",
                    "when": "editorLangId == 'twig'",
                    "group": "navigation"
                }
            ]
        }
    }
}